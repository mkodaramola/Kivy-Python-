
<RoundedButton@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (0.2, 0.2, 0.25, 1) if self.state == 'normal' else (1,0,1,1)
		RoundedRectangle:
			pos:self.pos
			size:self.size
			radius: [0,250,250,0]




<MyGridLayout>
	GridLayout:
		cols: 1
		size: (root.width, root.height)	
		Label:
			text: 'FileCrypt'
			size_hint: (1, .15)
			font_size: 30
			halign: "left"	
			background_color: (0.5, .6, 0.4, 1)
			foreground_color: (1,1,0.8,1)
			readonly: True

		TextInput:
			text: ''
			id: tb1
			size_hint: (1, 0.5)
			background_color: (0.15, .15, 0.15, 1)
			foreground_color: (1, 1, 1, 1)
			font_size: 20
		GridLayout:
			cols: 2
			BoxLayout:
			
				Spinner:
					id:opTy
					markup: True
					text:"Encrypt"
					values: ["Encrypt","Decrypt"]
					size_hint: (0.3, 0.1)
					pos_hint: {'center_x': 0.5,"center_y":0.9}
					font_size: 30
					background_normal: ''
					background_color: (0.2, 0.2, 0.25, 1)
			BoxLayout:
	
				RoundedButton:
					markup: True
					text: "Perform"
					halign: "left"
					font_size: 30
					size_hint: (0.3, 0.1)
					pos_hint: {'center_x':0.5, 'bottom':1, 'center_y':0.15}
					on_press: root.perform()



		TextInput:
			text: ''
			id: tb2
			size_hint: (1, 0.5)
			background_color: (0.15, .15, 0.15, 1)
			foreground_color: (1, 1, 1, 1)

		TextInput:
			text: '  (C) Js Industries 2023'
			size_hint: (1, .09)
			halign: 'right'	
			background_color: (0.3, .5, 0.3, 1)
			foreground_color: (0.1,.1,0.1,1)

				


				
