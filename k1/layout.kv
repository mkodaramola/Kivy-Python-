
<MyGridLayout>
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		padding: 50
		spacing: 20

		background_color: (1, 1, 1, 0)
		background_normal: ''


		Button:
			text: 'Hello World'
			border: (30,30,30,30)

		RoundedButton:
			text: 'Goodbye World'
			size_hint: (1, .3)
			pos_hint: {'center_x': 0.5}
			

<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (0.4,0.5,0.7,1) if self.state == 'normal' else (1,0,0,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [58]


				









