<Button>
	size_hint: (0.2, 0.2)
	background_normal: ''
	background_color: (0.95, 0.95, 0.95, 1)
	color: (0, 0, 0, 1)
	font_size: 20



<MyGridLayout>

	BoxLayout:
		size: (root.width, root.height)
		orientation: 'vertical'
		padding: 2
		spacing: 2


		BoxLayout:
			size_hint: (1, 0.3)
			background_color:(1,1,0,1)

			TextInput:
				id: calc_input
				text: '0'
				font_size: 40
				halign: "right"
				valign: "bottom"
				size_hint: (1, 1)
				


		
		GridLayout:
			cols:4

			Button:
				id:obr
				text: '('
				on_press:root._numPress('(')
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)

			Button:
				id:cbr
				text: ')'
				on_press:root._numPress(')')
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)

			Button:
				id:pi
				text: 'pi'
				on_press:root._numPress('pi')
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)

			Button:
				text: '1/x'
				on_press: root.inverse()
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)

			Button:
				on_press: root.percent()
				text: '%'
				background_normal: ''
				background_color: (0.72, 0.72, 0.72, 1)
				
			Button:
				on_press: root._numPress('sqrt(')
				text: 'Sqrt'
				background_normal: ''
				background_color: (0.72, 0.72, 0.72, 1)

			Button:
				on_press:root._numPress('^')
				text: '^'
				background_normal: ''
				background_color: (0.72, 0.72, 0.72, 1)
		
			Button:
				on_press: root._numPress('abs(')
				text: 'abs()'
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)
				
			Button:
				on_press:root.clear()
				text: 'CE'
			Button:
				id:clear
				text: 'C'
				on_press:root.clear()

			Button:
				on_press:root.backspace()
				text: "Backspace"

			Button:
				on_press:root._numPress('/')
				text: '/'
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)
			Button:	
				text: '7'
				on_press:root._numPress(7)
			Button:
				on_press:root._numPress(8)
				text: '8'
			Button:
				on_press:root._numPress(9)
				text: '9'
			Button:
				on_press:root._numPress('x')
				text: 'X'
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)
			Button:
				on_press:root._numPress(4)
				text: '4'
			Button:
				on_press:root._numPress(5)
				text: '5'
			Button:
				on_press:root._numPress(6)
				text: '6'		
			Button:
				on_press:root._numPress('-')
				text: '-'
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)
			Button:
				on_press:root._numPress(1)
				text: '1'
			Button:
				on_press:root._numPress(2)
				text: '2'
			Button:
				on_press:root._numPress(3)
				text: '3'
			Button:
				on_press:root._numPress('+')
				text: '+'
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)
			Button:
				on_press:root._pORm()
				text: '+/-'
			Button:
				on_press:root._numPress(0)
				text: '0'
			Button:
				on_press:root._numPress('.')
				text: '.'
			Button:
				on_press:root.compute()
				text: '='
				background_normal: ''
				background_color: (0.62, 0.62, 0.62, 1)




