<Button>
	background_normal:''
	background_color:(1,1,0,1)

<TextInput>
	background_color: (0.12,0.67,0.53,1)

<Label>
	font_size:30


<MyGridLayout>
	BoxLayout:
		size: root.width, root.height
		orientation: "vertical"
		padding:10
		spacing:10

		Label:
			text: "Name"
			font_size:45
			background_color:(0,1,1,1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size:self.size
					pos:self.pos
			color:(1,0.5,0,1)
			bold: True
			italic: True
			outline_color:(0,1,0,1)
			outline_width:2




		TextInput:
			multiline: True

		Button:
			text: "Clear"
			background_color:(1,0,0,1)
			color: (0,0,0,1)

