<MyGridLayout>
	name:nameID
	input:inputID
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		Label:
			id: nameID
			text: "What is your Name?"
			font_size: 25

		TextInput:
			id:inputID
			multiline: False
			size_hint:(1,0.4)
			pos_hint:{"center_x":0.5}

		Button:
			text: "Submit"
			size_hint:(1,0.5)
			on_press:root.updName()